{
	"manifest_version": 3,

	"name": "Youtube To Ableton",
    "icons": {
       "128": "icon128.png"
    },
	"description": "An helper extension to import Youtube musics to ableton",
	"version": "1.0",
	"background": {
		"service_worker": "background.js"
	},

	"permissions": [
        "contextMenus",
        "scripting"
    ],

    "host_permissions": [
        "https://music.youtube.com/*",
        "https://www.youtube.com/*"
    ],

    "action": {
        "default_title": "Youtube To Ableton",
        "default_icon": "icon128.png"
    }
}